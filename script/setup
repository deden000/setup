
echo "Installing base apps ..."
echo "\n"

yay -S kitty google-chrome discord neovim spotify zsh nvm yarn git zoxide blueman wireless_tools brightnessctl picom htop fontawesome wireguard polybary

# nvidia
sudo pacman -S nvidia nvidia-utils nvidia-settings


echo "eval'$(zoxide init zsh)" >> $HOME/.zshrc


# auto wireguard config
sudo cat ../fater.conf > /etc/wirguard/fater.conf 


# zsh
# oh my zsh
sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"

# git clone ? all repo
mkdir -p $HOME/Documents/projects


# copy config files
cp -r ../config/* $HOME/.config/
